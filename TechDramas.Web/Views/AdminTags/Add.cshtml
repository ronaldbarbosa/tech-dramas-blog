@model TechDramas.Web.Models.ViewModels.AddTagViewModel
@{
    ViewData["Title"] = "Add a new tag";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h2>Add New Tag - Admin Functionality</h2>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark" asp-action="Add" >Submit</button>
        </div>
    </form>
</div>